<body>

<%- include('../include/navigation.ejs')%>

<main>

<% if ( products.length > 0 ) { %>

 <div style="display : grid; justify-content: center ;"> <p style="font-size : x-large;"> Total billing :  <%= total_bill %> </p> 
 
 
 <div> <form action="/create-order" method="POST">


    <button type="submit" class="btn"> Order Now </button> 

    
    </form> </div>


 </div>

 <div style="display : flex; justify-content: center ;"> 



 <% for (p of products) { %>
  
    <div style="display: flex; justify-content: center; width: 100%;">

  
       <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"> <%= p.title %> </h1>
                </header>
                <div class="card__image">
                    <img src="<%= p.imageurl %>">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$<%= p.price %></h2>
                    <p class="product__description"> <%= p.description %></p>

                   <h2 class="product__price"> Quantity :   (<%= p.qty %>) </h2>
                 
                  <form action="/cart-delete-item" method="POST">

                  <input type="hidden" name="prid" value="<%= p._id %>">
                  <button type="submit" class="btn"> Delete </button>

                  </form>

                </div>
      
      
            </article>


    </div>

        
      
      <% } %>
 
 </div>
 


<% } else {%>

<h1> No products is cart !!!! </h1>

<% } %>


</main>

<%- include('../include/end.ejs')%>