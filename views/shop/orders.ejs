<main>



 <% if (orders.length > 0) {  %>

   
   <div style="display: grid;">

    <% for (let ord of orders) { %>


    <div style="border-style : solid; margin-bottom : 20px ;">
    
     
      <p> order id -  <%= ord._id %>  </p>

    <% for (let list of ord.cart) { %>

     <div style="display: grid;">
      
     <p> title - <%= list.product.title %> </p>
     <p> price -  <%= list.product.price %> </p>
     <p> description -  <%= list.product.description %> </p>
     <p> Quantity -  <%= list.quantity %> </p>

       <img src="<%= list.product.imageurl %>" >

       </div>

      <% } %>


     </div>
  


   <% } %>

   </div>

   
   

 <% } else { %>

 <h1> not anything ordered. </h1>

 <% } %>


